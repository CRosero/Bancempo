<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="-148dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ECAFAF"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:background="#E4B1B1"
                    android:backgroundTint="#E4B1B1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E4B1B1"
                            android:text="Title"
                            android:textAlignment="textStart"
                            android:textColor="#004D40" />

                        <TextView
                            android:id="@+id/title_adv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_icons8_etichetta_50"
                            android:drawablePadding="5dp"
                            android:text="Tagliare il giardino"
                            android:textColor="#938989" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp">

                    <TextView
                        android:id="@+id/description_adv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/description_edit"
                        android:paddingTop="20dp"
                        android:text="Description" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E4B1B1"
                        android:backgroundTint="#E4B1B1"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu blandit tortor, ac volutpat dui. Proin tempus odio eu orci vulputate imperdiet in at risus. In fermentum neque enim, sit amet ullamcorper nisi viverra eget. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Sed mattis, diam eu euismod rhoncus, enim ipsum laoreet arcu, sed luctus dui risus a magna. Mauris ultricies ullamcorper tortor vitae mollis. Nullam aliquet, augue nec ultricies iaculis, elit est hendrerit erat, non ornare quam orci id metus. In vestibulum malesuada diam at sollicitudin. Etiam eget orci eu quam rutrum auctor. Pellentesque nec dolor non risus sodales suscipit a a lacus. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec interdum fermentum nisl sed placerat. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Vestibulum et commodo mi." />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="150dp">

                <EditText
                    android:id="@+id/date_adv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"
                    android:text="02/03/2023" />

                <TextView
                    android:id="@+id/location_adv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Treviso" />

                <EditText
                    android:id="@+id/time_adv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="time"
                    android:text="10:51" />

                <TextView
                    android:id="@+id/note_adv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>