<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="-148dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-30dp"
                    android:background="#7CDD59"
                    android:backgroundTint="#B6AAEC"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="#E4B1B1"
                            android:backgroundTint="#E4B1B1"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#B6AAEC"
                                    android:backgroundTint="#B6AAEC"
                                    android:drawableStart="@drawable/ic_icons8_etichetta_50"
                                    android:drawablePadding="5dp"
                                    android:text="Title"
                                    android:textAlignment="textStart"
                                    android:textColor="#004D40"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/title_adv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#B6AAEC"
                                    android:backgroundTint="#B6AAEC"
                                    android:drawablePadding="5dp"
                                    android:text="Tagliare il giardino" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="18dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#B6AAEC"
                                    android:backgroundTint="#B6AAEC"
                                    android:drawableStart="@drawable/ic_icons8_documentobianco_50"
                                    android:drawablePadding="5dp"
                                    android:text="Description"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/description_adv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#B6AAEC"
                                    android:backgroundTint="#B6AAEC"
                                    android:drawablePadding="5dp"
                                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu blandit tortor, ac volutpat dui. Proin tempus odio eu orci vulputate imperdiet in at risus. In fermentum neque enim, sit amet ullamcorper nisi viverra eget. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Sed mattis, diam eu euismod rhoncus, enim ipsum laoreet arcu, sed luctus dui risus a magna. Mauris ultricies ullamcorper tortor vitae mollis. Nullam aliquet, augue nec ultricies iaculis, elit est hendrerit erat, non ornare quam orci id metus. In vestibulum malesuada diam at sollicitudin. Etiam eget orci eu quam rutrum auctor. Pellentesque nec dolor non risus sodales suscipit a a lacus. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec interdum fermentum nisl sed placerat. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Vestibulum et commodo mi." />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date" />

                        <EditText
                            android:id="@+id/date_adv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date"
                            android:text="02/03/2023" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time" />

                        <EditText
                            android:id="@+id/time_adv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp"
                            android:ems="10"
                            android:inputType="time"
                            android:text="10:51" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location" />

                        <TextView
                            android:id="@+id/location_adv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp"
                            android:text="Treviso"
                            android:textColor="#000000" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp"
                            android:text="Note" />

                        <TextView
                            android:id="@+id/note_adv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aenean euismod aliquet nulla vel luctus. Nam volutpat eros nulla, at rutrum odio molestie quis. Sed porta velit eu aliquam dapibus. Nunc mattis, nisi vitae eleifend egestas, arcu elit interdum elit, nec malesuada augue tellus rutrum massa. Nunc at nunc imperdiet, semper nibh sollicitudin, mattis erat."
                            android:textColor="#020202" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>